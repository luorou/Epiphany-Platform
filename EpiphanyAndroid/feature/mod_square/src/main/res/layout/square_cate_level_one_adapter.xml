<?xml version="1.0" encoding="utf-8"?>
<com.github.easyview.EasyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_16"
    app:ev_radius="@dimen/dp_10"
    android:background="@color/col_ffffff"
    android:padding="@dimen/dp_16"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/col_333333"
        android:layout_centerVertical="true"
        android:id="@+id/tv_cate_name"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="@dimen/dp_16"
        android:layout_toEndOf="@+id/tv_cate_name"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.github.easyview.EasyRelativeLayout>